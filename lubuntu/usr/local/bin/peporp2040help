# peporp2040help for helper RP2040-Zero
# peporp2040help $1:ch[0-3] [$2:0 or 1] [$3: timer->1 to 300000ms]
PATH=$PATH:/usr/local/bin:/usr/local/sbin
usage(){
  echo "usage $0 write->chno:0-3 [DO:0|1] [timer->1 to 300000ms]" >/dev/stderr
  exit -1
}
if [ $# -eq 0 ];then
  usage
elif [ $# -eq 1 ];then
  usage
elif [ "$1" -gt 3 -o "$1" -lt 0 ];then
  usage
elif [ $# -eq 2 ];then
  if [ "$2" -gt 1 ];then
   usage
  fi
elif [ $# -eq 3 ];then
  if [ "$2" -gt 0 -a "$2" -gt 1 -o "$3" -gt 300000 -o "$3" -lt 1 ];then
    usage
  fi
fi
CH=$1
DATA=$2
TIMER=$3
prog=peporp2040help
DIR=/www/remote-hand/tmp
DOWD=$DIR/.do_write_rp2040_helper
tDOWD=$DIR/.do_write_rp2040_helper_tmp
#!/bin/bash
writefile(){
  local ch data
  ch=$1
  data=$2
  case $ch in
    0) DO="DO[0]" ;;
    1) DO="DO[1]" ;;
    2) DO="DO[2]" ;;
    3) DO="DO[3]" ;;
  esac
  if [ -e ${DOWD} ];then
    cat ${DOWD} | grep -F -v $DO >${tDOWD}
    echo -en "${DO}=${data}" >>${tDOWD}
    mv ${tDOWD} ${DOWD}
  else
    echo -en "${DO}=${data}" >>${DOWD}
  fi
  chown www-data:www-data ${DOWD}
}

if [ ! -z "$TIMER" ];then
  writefile $CH $DATA
  msleep $TIMER
  [ $DATA != "0" ] && TMP="0" || TMP="1"
  writefile $CH $TMP
else
  writefile $CH $DATA
fi
